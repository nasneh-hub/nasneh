# ===========================================
# Nasneh API - Environment Variables
# ===========================================
# ⚠️ NEVER commit real values! Copy to .env.local

# ===================
# Server
# ===================
NODE_ENV=development
PORT=4000
API_VERSION=v1

# ===================
# Database
# ===================
DATABASE_URL=mysql://username:password@localhost:3306/nasneh_dev

# ===================
# Redis
# ===================
REDIS_URL=redis://localhost:6379

# ===================
# JWT
# ===================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ===================
# AWS (Bahrain Region)
# ===================
AWS_REGION=me-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3
AWS_S3_BUCKET=nasneh-dev-media

# SES (Email)
AWS_SES_FROM_EMAIL=noreply@nasneh.com

# SNS (SMS)
AWS_SNS_REGION=me-south-1

# ===================
# WhatsApp Business API
# ===================
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=

# ===================
# Payment Gateway (APS)
# ===================
APS_MERCHANT_ID=
APS_ACCESS_CODE=
APS_SHA_REQUEST_PHRASE=
APS_SHA_RESPONSE_PHRASE=
APS_SANDBOX=true

# ===================
# URLs
# ===================
FRONTEND_URL=http://localhost:3000
DASHBOARD_URL=http://localhost:3001

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_OTP_PER_HOUR=5
RATE_LIMIT_LOGIN_PER_HOUR=10

# ===================
# OTP
# ===================
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=5
OTP_RESEND_COOLDOWN_SECONDS=60
OTP_WHATSAPP_TIMEOUT_SECONDS=10
