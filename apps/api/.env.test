# ===========================================
# Nasneh API - Test Environment Variables
# ===========================================
# These values are used for CI/CD testing only.
# They are NOT real credentials.

# ===================
# Server
# ===================
NODE_ENV=test
PORT=4000
API_VERSION=v1

# ===================
# Database (not used in unit tests)
# ===================
DATABASE_URL=mysql://test:test@localhost:3306/nasneh_test

# ===================
# Redis
# ===================
REDIS_URL=redis://localhost:6379

# ===================
# JWT (test secret - NOT for production)
# ===================
JWT_SECRET=test-jwt-secret-for-ci-testing-minimum-32-characters-required
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ===================
# AWS (test values)
# ===================
AWS_REGION=me-south-1
AWS_ACCESS_KEY_ID=test-access-key
AWS_SECRET_ACCESS_KEY=test-secret-key
AWS_S3_BUCKET=nasneh-test-media
AWS_SNS_REGION=me-south-1

# ===================
# WhatsApp (test values)
# ===================
WHATSAPP_API_URL=https://test.whatsapp.api
WHATSAPP_API_TOKEN=test-token
WHATSAPP_PHONE_NUMBER_ID=123456789
WHATSAPP_BUSINESS_ACCOUNT_ID=987654321

# ===================
# Payment Gateway (test values)
# ===================
APS_MERCHANT_IDENTIFIER=test-merchant
APS_ACCESS_CODE=test-access
APS_SHA_REQUEST_PHRASE=test-request-phrase
APS_SHA_RESPONSE_PHRASE=test-response-phrase
APS_API_URL=https://sbpaymentservices.payfort.com/FortAPI/paymentApi
APS_CHECKOUT_URL=https://sbcheckout.payfort.com/FortAPI/paymentPage
APS_CURRENCY=BHD

# ===================
# URLs
# ===================
FRONTEND_URL=http://localhost:3000
DASHBOARD_URL=http://localhost:3001

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_OTP_PER_HOUR=5
RATE_LIMIT_LOGIN_PER_HOUR=10

# ===================
# OTP
# ===================
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=5
OTP_RESEND_COOLDOWN_SECONDS=60
OTP_WHATSAPP_TIMEOUT_SECONDS=10
